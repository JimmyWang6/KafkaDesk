<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.kafkadesk.ui.controller.MainController"
            prefHeight="800.0" prefWidth="1200.0">

    <!-- Top: Header with Toolbar and Menu Bar -->
    <top>
        <VBox style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
            <!-- Toolbar - Icon Labels (clickable) -->
            <HBox spacing="8" alignment="CENTER_LEFT" style="-fx-padding: 8 12 8 12; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
                <Label fx:id="btnAddCluster" text="âž•"
                       styleClass="toolbar-icon"/>
                <Label fx:id="btnRefresh" text="ðŸ”„"
                       styleClass="toolbar-icon"/>
            </HBox>
            
            <!-- Menu Bar -->
            <HBox styleClass="integrated-header" spacing="8" alignment="CENTER_LEFT"
                  style="-fx-background-color: #FFFFFF; -fx-padding: 4 12 4 12;">
                <MenuBar fx:id="menuBar" style="-fx-background-color: transparent; -fx-border-width: 0;">
                    <Menu fx:id="menuFile">
                        <MenuItem fx:id="menuItemAddCluster" onAction="#handleAddCluster"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="menuItemExit" onAction="#handleExit"/>
                    </Menu>
                    <Menu fx:id="menuView">
                        <MenuItem fx:id="menuItemRefresh" onAction="#handleRefreshTopics"/>
                    </Menu>
                    <Menu fx:id="menuTools">
                        <MenuItem fx:id="menuItemSettings" onAction="#handleSettings"/>
                    </Menu>
                    <Menu fx:id="menuHelp">
                        <MenuItem fx:id="menuItemAbout" onAction="#handleAbout"/>
                    </Menu>
                </MenuBar>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Main Work Area with Cluster Tree on Left -->
    <center>
        <SplitPane dividerPositions="0.2" style="-fx-background-color: #F8F9FA;">
            <!-- Left: Cluster TreeView with Fixed Width -->
            <VBox prefWidth="250" minWidth="250" maxWidth="250" 
                  style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-width: 0 0.5 0 0;">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>
                
                <!-- Search Box -->
                <HBox spacing="0" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-border-radius: 3; -fx-background-radius: 3;">
                    <TextField fx:id="searchField" promptText="Search clusters..." 
                               style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 6 8;"
                               HBox.hgrow="ALWAYS">
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </TextField>
                    <Label text="ðŸ”" style="-fx-padding: 6 10; -fx-text-fill: #666; -fx-font-size: 20px; -fx-min-width: 36px; -fx-min-height: 36px; -fx-alignment: center;"/>
                </HBox>
                
                <TreeView fx:id="clusterTreeView" VBox.vgrow="ALWAYS" 
                          style="-fx-border-color: transparent; -fx-background-color: white;">
                    <VBox.margin>
                        <Insets top="12"/>
                    </VBox.margin>
                </TreeView>
            </VBox>

            <!-- Right: Content Area -->
            <StackPane fx:id="contentArea" style="-fx-background-color: white;">
                <!-- Content will be shown here based on tree selection -->
            </StackPane>
        </SplitPane>
    </center>

    <!-- Bottom: Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 5;">
            <Label fx:id="statusLabel"/>
        </HBox>
    </bottom>
</BorderPane>
