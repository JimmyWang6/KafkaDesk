<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.kafkadesk.ui.controller.MainController"
            prefHeight="800.0" prefWidth="1200.0"
            style="-fx-background-color: #ffffff;">

    <!-- Top: Menu Bar (simplified, no separate toolbar) -->
    <top>
        <VBox style="-fx-background-color: #FFFFFF;">
            <!-- Menu Bar -->
            <HBox spacing="8" alignment="CENTER_LEFT"
                  style="-fx-background-color: #FFFFFF; -fx-padding: 8 20 8 0; -fx-border-color: #e1e8ed; -fx-border-width: 0 0 1 0;">
                <MenuBar fx:id="menuBar" style="-fx-background-color: transparent; -fx-border-width: 0;">
                    <Menu fx:id="menuFile">
                        <MenuItem fx:id="menuItemAddCluster" onAction="#handleAddCluster"/>
                        <SeparatorMenuItem/>
                        <MenuItem fx:id="menuItemExit" onAction="#handleExit"/>
                    </Menu>
                    <Menu fx:id="menuView">
                        <MenuItem fx:id="menuItemRefresh" onAction="#handleRefreshTopics"/>
                    </Menu>
                    <Menu fx:id="menuTools">
                        <MenuItem fx:id="menuItemSettings" onAction="#handleSettings"/>
                    </Menu>
                    <Menu fx:id="menuHelp">
                        <MenuItem fx:id="menuItemAbout" onAction="#handleAbout"/>
                    </Menu>
                </MenuBar>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Main Work Area with Sidebar -->
    <center>
        <SplitPane dividerPositions="0.22" style="-fx-background-color: #f5f7fa;">
            <!-- Left: Sidebar with sections -->
            <VBox prefWidth="260" minWidth="260" maxWidth="260" 
                  style="-fx-background-color: #f8fafc; -fx-border-color: #e1e8ed; -fx-border-width: 0 1 0 0;">
                <padding>
                    <Insets top="0" right="0" bottom="15" left="0"/>
                </padding>
                
                <TreeView fx:id="clusterTreeView" VBox.vgrow="ALWAYS" 
                          style="-fx-border-color: transparent; -fx-background-color: #f8fafc;">
                </TreeView>
            </VBox>

            <!-- Right: Content Area -->
            <StackPane fx:id="contentArea" style="-fx-background-color: #ffffff;">
                <!-- Content will be shown here based on tree selection -->
            </StackPane>
        </SplitPane>
    </center>

    <!-- Bottom: Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" 
              style="-fx-background: linear-gradient(to right, #667eea 0%, #764ba2 100%); -fx-padding: 8 20 8 20;">
            <Label fx:id="statusLabel" style="-fx-text-fill: white; -fx-font-weight: 500; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>
</BorderPane>
