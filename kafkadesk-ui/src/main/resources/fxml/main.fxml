<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.kafkadesk.ui.controller.MainController"
            prefHeight="800.0" prefWidth="1200.0">

    <!-- Top: Integrated Header Bar -->
    <top>
        <HBox styleClass="integrated-header" spacing="8" alignment="CENTER_LEFT"
              style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0; -fx-padding: 8 12 8 12;">
            
            <!-- Menu Bar - Compact -->
            <MenuBar fx:id="menuBar" style="-fx-background-color: transparent; -fx-border-width: 0;">
                <Menu fx:id="menuFile">
                    <MenuItem fx:id="menuItemAddCluster" onAction="#handleAddCluster"/>
                    <SeparatorMenuItem/>
                    <MenuItem fx:id="menuItemExit" onAction="#handleExit"/>
                </Menu>
                <Menu fx:id="menuView">
                    <MenuItem fx:id="menuItemRefresh" onAction="#handleRefreshTopics"/>
                </Menu>
                <Menu fx:id="menuTools">
                    <MenuItem fx:id="menuItemSettings" onAction="#handleSettings"/>
                </Menu>
                <Menu fx:id="menuHelp">
                    <MenuItem fx:id="menuItemAbout" onAction="#handleAbout"/>
                </Menu>
            </MenuBar>
            
            <!-- Spacer to push buttons to the right -->
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Quick Action Buttons -->
            <Button fx:id="btnAddCluster" onAction="#handleAddCluster" text="âž•"
                    style="-fx-min-width: 40; -fx-font-size: 16px;"/>
            <Button fx:id="btnRefresh" onAction="#handleRefreshTopics" text="ðŸ”„"
                    styleClass="button secondary"
                    style="-fx-min-width: 40; -fx-font-size: 16px;"/>
        </HBox>
    </top>

    <!-- Center: Main Work Area with Cluster Tabs on Left -->
    <center>
        <SplitPane dividerPositions="0.15" style="-fx-background-color: #F8F9FA;">
            <!-- Left: Cluster Tabs (Vertical) -->
            <VBox style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-width: 0 1 0 0;">
                <padding>
                    <Insets top="12" right="8" bottom="12" left="8"/>
                </padding>
                <Label fx:id="lblClusterList" styleClass="label subheader" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #212121;"/>
                <TabPane fx:id="clusterTabPane" VBox.vgrow="ALWAYS" side="LEFT" tabClosingPolicy="UNAVAILABLE"
                         style="-fx-border-color: transparent; -fx-background-color: white; -fx-tab-min-height: 60;">
                    <VBox.margin>
                        <Insets top="12"/>
                    </VBox.margin>
                    <!-- Cluster tabs will be added dynamically -->
                </TabPane>
            </VBox>

            <!-- Right: Cluster Content Area with Nested Tabs -->
            <TabPane fx:id="openClustersTabPane" tabClosingPolicy="ALL_TABS" style="-fx-background-color: white;">
                <!-- Open cluster tabs will be added dynamically -->
                <!-- Each tab will contain a nested TabPane with Overview, Brokers, Topics, Consumer, ACL -->
            </TabPane>
        </SplitPane>
    </center>

    <!-- Bottom: Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 5;">
            <Label fx:id="statusLabel"/>
        </HBox>
    </bottom>
</BorderPane>
